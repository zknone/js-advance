<div class='chat-menu'>
  <div class='chat-menu__avatar'></div>

  <div class='chat-menu__name'>
    {{name}}
  </div>

  <div class='chat-menu__actions-container'>
    <button class='chat-menu__actions-main-button' aria-label='Открыть меню'>
      <image src='/menu-icon.svg'></image>
    </button>
    <div class='chat-menu__actions-menu'>
      <button
        class='chat-menu__actions-button'
        type='button'
        aria-label='Прикрепить картинку или видео'
      >
        <div class='chat-menu__icon'>
          <image class='chat-menu__icon-background' src='/add-icon.svg'></image>
          <image class='chat-menu__add-icon' src='/add-cross.svg'></image>
        </div>

        <span>Добавить пользователя</span>
      </button>
      <button
        class='chat-menu__actions-button'
        type='button'
        aria-label='Прикрепить картинку или видео'
      >
        <div class='chat-menu__icon'>
          <image class='chat-menu__icon-background' src='/delete-icon.svg'></image>
          <image class='chat-menu__delete-icon' src='/delete-cross.svg'></image>
        </div>
        <span>Удалить пользователя</span>
      </button>
    </div>

  </div>
</div>